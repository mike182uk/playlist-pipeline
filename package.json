{
  "name": "playlist-pipeline",
  "version": "1.0.0",
  "description": "A CLI for programmatically organising, pruning & grooming your Spotify playlists",
  "type": "module",
  "scripts": {
    "fmt": "npx @biomejs/biome format --write .",
    "lint": "npx @biomejs/biome lint .",
    "test": "npx vitest ./lib --run --coverage --reporter=verbose"
  },
  "bin": "./index.js",
  "engines": {
    "node": ">=18"
  },
  "author": {
    "name": "Michael Barrett",
    "email": "mike182uk@gmail.com",
    "url": "https://mdb.sh"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/mike182uk/playlist-pipeline.git"
  },
  "homepage": "https://github.com/mike182uk/playlist-pipeline",
  "bugs": {
    "url": "https://github.com/mike182uk/playlist-pipeline/issues"
  },
  "keywords": [
    "spotify",
    "spotify api",
    "playlist",
    "playlist manager",
    "music"
  ],
  "dependencies": {
    "commander": "12.0.0",
    "conf": "12.0.0",
    "date-fns": "3.3.1",
    "debug": "4.3.4",
    "get-stdin": "9.0.0",
    "handlebars": "4.7.8",
    "joi": "17.13.0",
    "js-yaml": "4.1.0",
    "lodash-es": "4.17.21",
    "spotify-web-api-node": "5.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@vitest/coverage-v8": "1.2.2",
    "jest-when": "3.6.0",
    "temp-write": "5.0.0",
    "vitest": "1.5.3"
  }
}
